			<ArmorSection start="225" span="90" armorID="&itCeralloyArmor;"/>
			<ArmorSection start="135" span="90" armorID="&itCeralloyArmor;"/>
			<ArmorSection start="45"  span="90" armorID="&itCeralloyArmor;"/>
